<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="socilgirl.dell.mydemo.view.SQLiteTestActivity">
    <EditText
        android:id="@+id/et_userid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入userid"/>
    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入昵称"/>
    <EditText
        android:id="@+id/et_userphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入电话"/>
    <EditText
        android:id="@+id/et_uspassworld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"/>
    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加数据"/>
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除数据"/>
    <Button
        android:id="@+id/btn_ualter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改数据"/>
    <Button
        android:id="@+id/btn_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查看数据"/>
    <Button
        android:id="@+id/btn_adupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更新数据库"/>

    <TextView
        android:id="@+id/tv_show_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="显示数据库数据结果"/>

</LinearLayout>
